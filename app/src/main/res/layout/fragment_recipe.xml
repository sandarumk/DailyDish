<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/meal_time"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:background="@drawable/recipe_meal_icon_background"
        android:gravity="center"
        android:lines="1"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:autoSizeMaxTextSize="24sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        tools:text="B|L|D" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/meal_time"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/meal_time"
        android:layout_toRightOf="@id/meal_time"
        android:textSize="20sp"
        tools:text="dunnmy name" />

    <TextView
        android:id="@+id/recipe_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/recipe_name"
        android:layout_alignStart="@id/recipe_name"
        android:layout_below="@id/recipe_name"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="16sp"
        style="@style/AppTheme.TextSecondary"
        tools:text="dummy note" />
</RelativeLayout>
